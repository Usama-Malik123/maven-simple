pipeline {
    agent any  // Run on any available Jenkins agent

    stages {
        // Stage to print a hello message
        stage('Hello') {    
            steps {
                echo 'Hello, World!'    // Print "Hello, World!" in the console
            }
        }

        // Stage to build the Docker image
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image using standard Docker build
                    sh 'docker build -t usama235/myimage1:latest .'
                }
            }
        }

        // Optional: Stage to push the Docker image to Docker Hub
        stage('Push to Docker Hub') {
            steps {
                script {
                    // Log in to Docker Hub and push the image
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-credentials') {
                        sh 'docker push usama235/myimage1:latest'
                    }
                }
            }
        }
    }
}

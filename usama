pipeline {
    agent any  // Run on any available Jenkins agent

    stages {
        // Stage to print a hello message
        stage('Hello') {    
            steps {
                echo 'Hello, World!'    // Print "Hello, World!" in the console
            }
        }

        // Stage to build the Docker image with Buildx
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image using Buildx
                    sh 'docker buildx build --tag usama235/myimage1:latest .'
                }
            }
        }

        // Stage to push the Docker image to Docker Hub (optional if using --push)
        stage('Push to Docker Hub') {
            steps {
                script {
                    // Log in to Docker Hub and push the image (not needed if using --push)
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-credentials') {
                        // Push the image to Docker Hub (only if not using --push in Buildx)
                        // sh 'docker push usama235/myimage1:latest'
                    }
                }
            }
        }
    }
}
